{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "incremental": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build"]
}
